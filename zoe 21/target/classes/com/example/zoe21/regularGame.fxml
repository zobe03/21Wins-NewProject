<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="gameLayout" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zoe21.RegularGameController">

    <children>
        <!-- Hintergrund -->
        <Pane fx:id="backgroundPane" prefHeight="1000.0" prefWidth="1000.0"/>

        <!-- Labels, Textfeld und Grid -->
        <Label fx:id="roundLabel" layoutX="34.0" layoutY="32.0" prefHeight="53.0" prefWidth="201.0">
            <font>
                <Font size="43.0" />
            </font>
        </Label>
        <Label fx:id="playerLabel" layoutX="34.0" layoutY="83.0" prefHeight="35.0" prefWidth="128.0">
            <font>
                <Font name="PressStart2P-Regular" size="24.0" />
            </font>
        </Label>
        <Label fx:id="messageLabel" layoutX="34.0" layoutY="282.0" prefHeight="57.0" prefWidth="299.0" wrapText="true">
            <font>
                <Font name="PressStart2P-Regular" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="inputField" alignment="CENTER" layoutX="34.0" layoutY="176.0" onKeyPressed="#onKeyPressed">
            <font>
                <Font size="18.0" />
            </font>
        </TextField>
        <Button fx:id="sumButton" layoutX="34.0" layoutY="230.0" onAction="#onSumSelect" prefHeight="26.0" prefWidth="160.0" text="Sum">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <GridPane fx:id="gridPane" layoutX="404.0" layoutY="110.0">
            <!-- Definitionen fÃ¼r die GridPane-Zellen -->
        </GridPane>
        <Button fx:id="backtomenu" layoutX="14.0" layoutY="360.0" mnemonicParsing="false" onAction="#setBacktomenu" text="Back to Menu" />
    </children>
</AnchorPane>
