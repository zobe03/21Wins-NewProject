<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="gameLayout" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zoe21.MachineSetDifficultyController">
    <children>
        <Button fx:id="next" layoutX="507.0" layoutY="346.0" mnemonicParsing="false" onAction="#nextToRegularGame" prefHeight="42.0" prefWidth="79.0" text="Next" />
        <Button fx:id="backtomenu" layoutX="14.0" layoutY="346.0" mnemonicParsing="false" onAction="#setBacktomenu" prefHeight="42.0" prefWidth="113.0" text="Back " />
      <GridPane layoutX="250.0" layoutY="112.0" prefHeight="156.0" prefWidth="191.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
              <RadioButton fx:id="easy" mnemonicParsing="false" onAction="#onEasySelect" text="Easy">
               <font>
                  <Font size="18.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="difficulty" />
               </toggleGroup>
            </RadioButton>
              <RadioButton fx:id="medium" mnemonicParsing="false" onAction="#onMediumSelect" text="Medium" toggleGroup="$difficulty" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
              <RadioButton fx:id="hard" mnemonicParsing="false" onAction="#onHardSelected" text="Hard" toggleGroup="$difficulty" GridPane.rowIndex="2">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="expert" mnemonicParsing="false" onAction="#onExpertSelected" text="Expert" toggleGroup="$difficulty" GridPane.rowIndex="3">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="impossible" mnemonicParsing="false" onAction="#onImpossibleSelected" text="Impossible" GridPane.rowIndex="4">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
         </children>
      </GridPane>
    </children>
</AnchorPane>
